$(document).ready(function(){
    $('textarea').autosize();   
};
</script>

<%= form_for [@current_deck, @current_card] do |f| %>
  <% if @current_card.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@current_card.errors.count, "error") %> prohibited this card from being saved:</h2>

      <ul>
      <% @current_card.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">

    <%= f.label 'Q:' %>
    <%= f.text_area :question, autofocus: :true %>
    <br>
    <%= f.label 'A:' %>
    <%= f.text_area :answer %>

    <%= fields_for :addon do  |hidden| %>
    <%= hidden.hidden_field(:past_view , value:  @past_view) %> 
    <%= hidden.hidden_field(:current_card_index , value:  @current_card_index) %> 
    <% end %>

  </div>
  <div class="actions">
    <%= f.submit "Update"%>
  </div>
<% end %>
