<%= form_for [@current_deck, @current_card] do |f| %>
  <% if @current_card.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@current_card.errors.count, "error") %> prohibited this card from being saved:</h2>

      <ul>
      <% @current_card.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">

    <%= f.label :question %>
    <%= f.text_field :question, autofocus: :true %>
    <span id="notice"><%= notice %></span>
    <br>
    <%= f.label :answer %>
    <%= f.text_field :answer %>

    <%= if @current_card.time.nil? %>
    <%= f.hidden_field :time , :value => @current_card.id.generation_time.to_i  %>
    <%= end %>

  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
