<%= form_for :answer, :url => "/decks/#{@current_deck.id}/play/#{@current_card.time}/#{@past_card_time}" do |f| %>
  <div class="field">
    
    <%= f.label :answer %>
    <%= f.text_field :answer %><span id="notice"><%= notice %></span>

  </div>
  <div class="actions">
    <%= f.submit 'Check answer' %>
  </div>
<% end %>
