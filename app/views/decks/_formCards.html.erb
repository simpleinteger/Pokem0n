<%= form_for( @current_deck) do |f| %>
  <% if @current_deck.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@current_deck.errors.count, "error") %> prohibited this deck from being saved:</h2>

      <ul>
      <% @current_deck.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.fields_for @new_card  do |c| %>
    
    <%= c.label :question %>
    <%= c.text_field :question %>
    <br>
    <%= c.label :answer %>
    <%= c.text_field :answer %>

     <%= c.hidden_field :time , :value => @new_card.id.generation_time.to_i  %>

    <% end %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
