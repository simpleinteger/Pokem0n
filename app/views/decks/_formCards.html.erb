<%= form_for @current_deck do |f| %>
  <% if @current_deck.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@current_deck.errors.count, "error") %> prohibited this deck from being saved:</h2>

      <ul>
      <% @current_deck.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.fields_for @current_card  do |c| %>
    
    <%= c.label :question %>
    <%= c.text_field :question %>
    <br>
    <%= c.label :answer %>
    <%= c.text_field :answer %>
    
    <!-- card_id is hidden so we can determine if we are updating a card or creating a card in the deck/controller def create_card method -->
    <%= c.hidden_field :card_id , :value => @current_card.id %>

    <!-- if we the card doesnt have a time then is has not been created yet, this code is to make sure that the card time stays the same if we are updating the card and not creating the card, because we want the order of the cards to stay the same even after updating the card. -->
    <% if @current_card.time.nil? %>
    <%= c.hidden_field :time , :value => @current_card.id.generation_time.to_i  %>
    <% end %>

    <% end %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
